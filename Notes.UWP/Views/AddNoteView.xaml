<views:MvxWindowsPage
    x:Class="Notes.UWP.Views.AddNoteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MvvmCross.WindowsUWP.Views"
    xmlns:local="using:Notes.UWP"
    mc:Ignorable="d">

    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Uid="title" 
                 Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource TextBoxTitleStyle}"/>
        <local:RichEditEx  x:Uid="text" 
                           Grid.Row="1"
                           Text="{Binding Text, Mode=TwoWay}" 
                           Style="{StaticResource RichEditBoxTextStyle}"/>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:Uid="save" 
                          Icon="Accept"
                          IsEnabled="{Binding Title, Converter={StaticResource SetVisibilityButton}}"
                          Command="{Binding SaveNoteCommand}"/>
        </CommandBar>
    </Page.BottomAppBar>

</views:MvxWindowsPage>
